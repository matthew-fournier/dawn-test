{
  "name": "pointer-starter",
  "version": "1.0.0",
  "description": "Pointer Starter Theme 3.0",
  "main": "webpack.config.js",
  "author": "Pointer Creative",
  "scripts": {
    "dev": "webpack --watch",
    "build": "webpack",
    "serve": "shopify whoami && shopify theme serve",
    "push": "yarn build && shopify theme push",
    "push-new": "yarn build && shopify theme push --unpublished",
    "pull": "shopify theme pull",
    "clone-section": "node devops/clone-section/clone-section.js",
    "new-section": "node devops/new-section/new-section.js"
  },
  "dependencies": {
    "@shopify/theme-a11y": "^4.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/node": "^7.14.7",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.18.9",
    "@babel/runtime": "^7.8.4",
    "@shopify/babel-preset": "^23.1.1",
    "babel-loader": "^8.2.5",
    "babel-plugin-transform-runtime": "^6.23.0",
    "eslint": "^8.19.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "fs-extra": "^10.1.0",
    "prettier": "^2.1.1",
    "replace-in-file": "^6.3.5",
    "standard": "^17.0.0",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-property-sort-order-smacss": "^8.0.0",
    "stylelint-config-standard-scss": "^2.0.1",
    "terminal-kit": "^2.4.0",
    "webpack": "^4.41.6",
    "webpack-cli": "^4.3.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-watched-glob-entries-plugin": "^2.1.10"
  },
  "standard": {
    "globals": [
      "Shopify",
      "theme",
      "fetch",
      "location",
      "Event",
      "alert",
      "Swiper",
      "HTMLElement",
      "CustomEvent",
      "localStorage"
    ],
    "ignore": [
      "node_modules/**",
      "dist/**",
      "src/assets/**"
    ]
  },
  "babel": {
    "presets": [
      "@shopify/babel-preset/web",
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-async-to-generator",
      "@babel/transform-runtime"
    ]
  },
  "eslintConfig": {
    "extends": "standard",
    "env": {
      "browser": true
    }
  },
  "stylelint":{
    "extends": [
      "stylelint-config-property-sort-order-smacss",
      "stylelint-config-standard-scss",
      "stylelint-config-prettier"
    ],
    "rules": {
      "color-no-hex": null,
      "declaration-empty-line-before": null,
      "declaration-no-important": null,
      "selector-class-pattern": null,
      "selector-no-qualifying-type": null,
      "selector-max-type": null,
      "max-nesting-depth": 5,
      "selector-max-class": 5,
      "selector-max-combinators": 5,
      "selector-max-compound-selectors": 5,
      "selector-max-specificity": "0,5,0",
      "scss/selector-no-union-class-name": null,
      "scss/at-extend-no-missing-placeholder": null,
      "scss/no-global-function-names": null,
      "no-descending-specificity": null,
      "color-function-notation": null,
      "alpha-value-notation": null
    },
    "ignoreFiles": ["node_modules/**"]
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true
  }
}
